<%= simple_form_for @potentional_member, :html => { :class => 'form-horizontal' } do |f| %>
<div class="row">
  <div class="col-xs-2"><%= f.input :name %></div>
</div>
<div class="row">
  <div class="col-xs-2"><%= f.input :gender %>
</div>
</div>  
<div class="row">
  <div class="col-xs-2"><%= f.input :phone %></div>
</div> 
<div class="row">
  <div class="col-xs-2"><%= f.input :age %></div>
</div>  
<div class="row">
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                potentional_members_path, :class => 'btn btn-default' %>
</div> 
<% end %>
