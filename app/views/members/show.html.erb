<%- model_class = Member -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @member.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd>
    <% if @member.gender == "male" %>
      <%= "男" %>
    <% elsif @member.gender == "female" %>
      <%= "女" %>
    <% else %>
      <%= "" %>
    <% end %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:birth_date) %>:</strong></dt>
  <dd><%= @member.birth_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @member.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parent) %>:</strong></dt>
  <dd><%= @member.parent %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @member.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @member.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @member.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:card_category) %>:</strong></dt>
  <dd><%= card_category_value(@member.card_category) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sword) %>:</strong></dt>
  <dd><%= sword_value(@member.sword) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:national_record) %>:</strong></dt>
  <dd><%= @member.national_record %></dd>
  <dt><strong><%= model_class.human_attribute_name(:provincial_record) %>:</strong></dt>
  <dd><%= @member.provincial_record %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_status) %>:</strong></dt>
  <dd><%= @member.stop_status ? "是" : "否"  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_reason) %>:</strong></dt>
  <dd><%= @member.stop_reason %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @member.active ? "是" : "否" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:not_active_reason) %>:</strong></dt>
  <dd><%= @member.not_active_reason %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              members_path, :class => 'show_right btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_member_path(@member), :class => 'show_right btn btn-success' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              member_path(@member),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'show_right btn btn-danger' %>
